<div class="container">


<h1>Detail du cocktail</h1>

<h2><%= @cocktail.name %></h2>


<h2>Liste des doses</h2>

<ul>
  <% @doses.each do |dose| %>
  <li>

  <%= dose.ingredient.name %> - <%= dose.amount %> cl

  <%= link_to "Delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>


<%= link_to "back to list", cocktails_path %>
<br>

<%= link_to "add an ingredient", new_cocktail_dose_path(params[:id]) %>
</div>
